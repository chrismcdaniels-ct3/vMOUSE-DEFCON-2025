{
  "// Instructions": "Add these scripts to your package.json file",
  "scripts": {
    "docker:build": "docker build -t unity-webgl-platform .",
    "docker:dev": "docker-compose up",
    "docker:down": "docker-compose down",
    "docker:rebuild": "docker-compose build --no-cache",
    "docker:shell": "docker-compose exec app sh",
    "docker:logs": "docker-compose logs -f app",
    "docker:clean": "docker-compose down -v --rmi all"
  }
}
